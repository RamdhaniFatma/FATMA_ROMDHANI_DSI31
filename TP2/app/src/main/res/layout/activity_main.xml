<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    tools:context=".MainActivity">

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bordure"
        android:padding="20dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"

        android:text="bonjour !" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"

        android:text="marhba !" />


    <?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:orientation="vertical"


        tools:context=".MainActivity">

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/t1"
            android:background="@drawable/bordure"
            android:text="hello world!" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t1"
            android:layout_toRightOf="@id/t1"
            android:background="@drawable/bordure"
            android:text="bonjour !" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t2"
            android:layout_toRightOf="@id/t2"
            android:background="@drawable/bordure"
            android:text="marhba !" />

    </>

    <?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:layout_width="match_parent"
android:layout_height="107dp"
android:orientation="vertical"


tools:context=".MainActivity">

    <TextView
        android:background="@drawable/bordure"
        android:id="@+id/z1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello world!" />

    <TextView
        android:background="@drawable/bordure"
        android:id="@+id/z2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/z1"
        android:layout_alignRight="@id/z1"
        android:text="bonjour !" />

    <TextView
        android:background="@drawable/bordure"
        android:id="@+id/z3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/z2"
        android:layout_alignLeft="@id/z1"

        android:text="marhaba !" />
</>


    <?xml version="1.0" encoding="utf-8"?>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableau"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        android:gravity="center"
        >




        <TableRow
            android:background="@drawable/bordure"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:layout_column="0"
            android:layout_span="2">

            <TextView
                android:background="@drawable/bordure"
                android:text="titre du tableau"
                >

            </TextView>
        </TableRow>

        <TableRow
            android:background="@drawable/bordure"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:background="@drawable/bordure"
                android:text="v"
                >

            </TextView>
            <TextView
                android:background="@drawable/bordure"
                android:text="menu avec raccourci"
                >

            </TextView>
            <TextView
                android:background="@drawable/bordure"
                android:text="raccourci"
                >

            </TextView>
        </TableRow>
        <TableRow
            android:background="@drawable/bordure"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:background="@drawable/bordure"
                android:text=""
                >

            </TextView>
            <TextView
                android:background="@drawable/bordure"
                android:text="menu sans raccourci"
                >

            </TextView>
            <TextView
                android:background="@drawable/bordure"
                android:text="non"
                >

            </TextView>
        </TableRow>
    </TableLayout>


</LinearLayout>
